<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Accommodates</th>
      <th>Bathroom</th>
      <th>Price</th>
      <th>Kitchen</th>
      <th>Internet</th>
      <th>Pets</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= room.accommodates %></td>
        <td><%= room.bathroom %></td>
        <td><%= room.price %></td>
        <td><%= room.kitchen %></td>
        <td><%= room.internet %></td>
        <td><%= room.pets %></td>
        <td><%= room.user %></td>
        <td><%= image_tag(room.photo_url) %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

